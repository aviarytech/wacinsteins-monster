{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": false,
    "checkJs": false,
    "types": ["cypress", "@testing-library/cypress"],
    "importsNotUsedAsValues": "preserve",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
  "exclude": ["./outDir/**/*"]
}
